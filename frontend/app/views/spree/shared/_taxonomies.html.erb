<% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>
<div class="col-sm-3">
	<div id="taxonomies" class="left-sidebar sidebar-item" data-hook>
		
		<% @taxonomies.each do |taxonomy| %>
		<% cache [I18n.locale, taxonomy, max_level] do %>
		<h2 class='taxonomy-root'><%= Spree.t(:shop_by_taxonomy, :taxonomy => taxonomy.name) %></h6>
		<%= taxons_tree(taxonomy.root, @taxon, max_level) %>
		<% end %>
		<% end %>
	</div>
</div>
